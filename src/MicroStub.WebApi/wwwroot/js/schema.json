{
  "title": "StubConfig",
  "type": "object",
  "properties": {
    "Subscribers": {
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "{{self.Key}}",
        "type": "object",
        "properties": {
          "Key": {
            "required": true,
            "type": "string"
          },
          "Secret": {
            "required": true,
            "type": "string"
          },
          "Projects": {
            "format": "tabs",
            "required": true,
            "type": "array",
            "items": {
              "headerTemplate": "{{self.Name}}",
              "type": "object",
              "properties": {
                "Name": {
                  "required": true,
                  "type": "string"
                },
                "EndPoints": {
                  "format": "tabs",
                  "required": true,
                  "type": "array",
                  "items": {
                    "headerTemplate": "{{self.Address}}",
                    "type": "object",
                    "properties": {
                      "Address": {
                        "required": true,
                        "type": "string"
                      },
                      "Methods": {
                        "format": "tabs",
                        "required": true,
                        "type": "array",
                        "items": {
                          "headerTemplate": "{{self.HttpVerb}}-{{self.HttpStatusCode}}",
                          "type": "object",
                          "properties": {
                            "HttpVerb": {
                              "type": "string",
                              "enum": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
                              "required": true
                            },
                            "QueryString": {
                              "required": true,
                              "type": "string"
                            },
                            "RequestBody": {
                              "format": "textarea",
                              "required": true,
                              "type": "string"
                            },
                            "ContentType": {
                              "type": "string",
                              "enum": [ "application/json", "text/html", "text/plain", "text/xml" ],
                              "required": true
                            },
                            "Response": {
                              "format": "textarea",
                              "required": true,
                              "type": "string"
                            },
                            "HttpStatusCode": {
                              "type": "integer",
                              "enum": [ 200, 301, 302, 304, 400, 401, 403, 404, 408, 409, 500, 502, 503, 504 ],
                              "required": true
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}